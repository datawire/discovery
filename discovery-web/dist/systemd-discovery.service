# file: discovery.conf

[Unit]
Description=Datawire Discovery
After=network.target
AssertPathExists=/opt/discovery
AssertFileIsExecutable=/opt/discovery/discovery.sh

[Service]
Type=simple
EnvironmentFile=/etc/discovery/discovery.env
ExecStart=/opt/discovery/discovery.sh
WorkingDirectory=/opt/discovery

[Install]
WantedBy=multi-user.target